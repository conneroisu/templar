package views

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/static/css/styles.css"/>
		</head>
		<body>
			<header class="header">
				<h1>{ title }</h1>
			</header>
			<main class="main">
				{ children... }
			</main>
			<footer class="footer">
				<p>&copy; 2024 Templar Project</p>
			</footer>
		</body>
	</html>
}
